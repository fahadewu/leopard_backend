# Backend Environment Variables for Production (cPanel)
NODE_ENV=production
PORT=5000

# Database Configuration (Update these with your cPanel database details)
DB_HOST=localhost
DB_USER=your_cpanel_db_user
DB_PASSWORD=your_cpanel_db_password
DB_NAME=your_cpanel_db_name

# JWT Secret (Use a strong secret key)
JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production_to_something_very_secure

# Admin Credentials
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=your_secure_admin_password

# File Upload Settings
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Backend Base URL (This ensures HTTPS URLs for uploaded images)
BACKEND_BASE_URL=https://leopard.oracrondigital.com

# CORS Settings
FRONTEND_URL=https://fahad.oracrondigital.com